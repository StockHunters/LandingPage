---
const {title, content} = Astro.props;
import Button from "./button.astro";
import ServiceCard from "./servicecard.astro";
---

<div class="main-card">
    <div class="main-card-content">
        <h1>{title}</h1>
        <p>{content}</p>
        
        <div class="main-card-buttons">
            <Button url="/login" text="Probar"/>
            <Button url="/login" text="Ver Producto" bgcolor="#C8C8C8" txtcolor ="#000000"/>
        </div>

        <div class="main-services-card">
            <ServiceCard description="AnÃ¡lisis de Sentimiento">
                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-file-text" viewBox="0 0 16 16">
                    <path d="M5 4a.5.5 0 0 0 0 1h6a.5.5 0 0 0 0-1zm-.5 2.5A.5.5 0 0 1 5 6h6a.5.5 0 0 1 0 1H5a.5.5 0 0 1-.5-.5M5 8a.5.5 0 0 0 0 1h6a.5.5 0 0 0 0-1zm0 2a.5.5 0 0 0 0 1h3a.5.5 0 0 0 0-1z"/>
                    <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2zm10-1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1"/>
                </svg>
            </ServiceCard>
    
            <ServiceCard description="Mejora tus ventas con resportes inteligente">
                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-graph-up-arrow" viewBox="0 0 16 16"> 
                    <path fill-rule="evenodd" d="M0 0h1v15h15v1H0zm10 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 .5.5v4a.5.5 0 0 1-1 0V4.9l-3.613 4.417a.5.5 0 0 1-.74.037L7.06 6.767l-3.656 5.027a.5.5 0 0 1-.808-.588l4-5.5a.5.5 0 0 1 .758-.06l2.609 2.61L13.445 4H10.5a.5.5 0 0 1-.5-.5"/>
                </svg>
            </ServiceCard>

            <ServiceCard description="Ideal para empresas y pymes">
                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-wrench" viewBox="0 0 16 16">
                    <path d="M.102 2.223A3.004 3.004 0 0 0 3.78 5.897l6.341 6.252A3.003 3.003 0 0 0 13 16a3 3 0 1 0-.851-5.878L5.897 3.781A3.004 3.004 0 0 0 2.223.1l2.141 2.142L4 4l-1.757.364zm13.37 9.019.528.026.287.445.445.287.026.529L15 13l-.242.471-.026.529-.445.287-.287.445-.529.026L13 15l-.471-.242-.529-.026-.287-.445-.445-.287-.026-.529L11 13l.242-.471.026-.529.445-.287.287-.445.529-.026L13 11z"/>
                </svg>
            </ServiceCard>
        </div>
    
    </div>

    <div class="main-card-image">
        <img src="./logo.svg" alt="Imagen de StockHunters" class="main-card-img" width="100%"/>
    </div>


</div>

<style>
    .main-card{
        background-color: #F4F4F4 ;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 50px 60px;
        gap: 80px;
        overflow: hidden;
    }
    .main-card-content{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        gap: 25px;
    }  
    .main-card-image{
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .main-card-buttons{
        display: flex;
        align-self: end;
        gap: 20px;
    }

    h1{
        width: 300px;
        margin: 0px;
    }
    p{
        margin: 0px;
        width: 300px;
    }

    @media screen and (max-width: 800px) {
        .main-card{
            flex-direction: column;
            gap: 20px;
        }
        .main-card-content{
            align-items: center;
            text-align: center;
        }
        .main-card-buttons{
            align-self: center;
        }
        h1{
            width: 100%;
        }
        p{
            width: 100%;
        }
        
    }

    @media screen and (max-width: 440px) {
        .main-card{
            padding: 30px 30px;
            gap: 20px;
        }
        .main-card-content{
            gap: 20px;
        }
        .main-card-buttons{
            gap: 20px;
        }
        h1{
            width: 100%;
            font-size: 24px;
        }
        p{
            width: 100%;
            font-size: 16px;
        }
    }

    @media screen and (max-width: 370px){
        .main-services-card{
            visibility: hidden;
            display: none;
        }
        .main-card-buttons{
            /* display: block; */
            flex-direction: column;
            align-items: center;
        }

    }

</style> 
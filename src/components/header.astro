---
import Button from "./button.astro";

const { url_icon, url_functions, url_plans, url_blog, url_contact_us} = Astro.props;

---

<header>
  <a href = {url_icon} class="logo-link">
      <img src="./logo_ico.svg" alt="Logo StockHunters" class="logo-ico"/>
  </a>

  <nav>
      <a href={url_functions} class="link">Funcionalidades</a>
      <a href={url_plans} class="link">Planes</a>
      <a href={url_blog} class="link">Blog</a>
      
      <Button url={url_contact_us} target="_blank" text="Contactanos"></Button>
  </nav>
</header>


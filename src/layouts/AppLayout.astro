---
// export propierties 
const { title } = Astro.props;

// import components and styles
import Header from '../components/header.astro';
import Footer from '../components/footer.astro';
import "../styles/global.css";

// define urls
const footer_urls = {
	url_fb: "https://www.facebook.com/",
	url_ig: "https://www.instagram.com/",
	url_X: "https://twitter.com/"
}

const header_urls = {
	url_icon: "#home",
	url_functions: "#funcionalidades",
	url_plans: "#planes",
	url_blog: "#blog",
	url_contact_us: "./contactanos"
}
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="./logo_ico.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>

	<body>
		<Header {...header_urls}/>

        <main>
            <slot></slot>
        </main>

		<Footer {...footer_urls} />
	</body>

</html>

<style>
	body{
		font-family: var(--font-family);
		font-size: 13px;
		margin: 0px;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
		width: 100%;
		background-color: var(--secondary-bg-color);
		color: var(--primary-text-color);
	}
	main{
		flex: 1;
	}
</style>